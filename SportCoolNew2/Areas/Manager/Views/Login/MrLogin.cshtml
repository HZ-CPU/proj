
@{
    ViewBag.Title = "MrLogin";
    
}


<form action="@Url.Action("MrLogin")" method="post">

    <fieldset>
        <legend style="text-align:start; margin-top:60px;">管理員登入</legend>
        <div class="form-group">
            <h5 class="control-label col-md-3">帳號:</h5>
            <div class="col-md-9">
                <input id="mid" name="mid" type="text" class="form-control" />
            </div>
        </div>


        <div class="form-group">
            <h5 class="control-label col-md-3">密碼:</h5>
            <div class="col-md-9">
                <input id="mpswd" name="mpswd" type="password" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-3 col-md-9">
                <input id="Submit1" type="submit" value="登入" class="btn btn-primary" />
                <input id="Reset1" type="reset" value="清除" class="btn btn-danger" />
                <span class="text-danger">@ViewBag.Error</span>
            </div>
        </div>

    </fieldset>
</form>


