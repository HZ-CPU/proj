@model SportCoolNew2.Models.Member



@{
    ViewBag.Title = "ForgetPwd";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h2>忘記密碼</h2>

        <form action="@Url.Action("ForgetPwd", "Home")" method="post">
            <br />
            <fieldset>

                <div class="form-group">
                    <label class="control-label col-md-3">帳號:</label>
                    <div class="col-md-9">
                        <input id="id" name="id" type="text" class="form-control" />
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-3">身分證字號:</label>
                    <div class="col-md-9">
                        <input id="IdentId" name="IdentId" type="text" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3">輸入新密碼:</label>
                    <div class="col-md-9">
                        <input id="Npwd" name="Npwd" type="text" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3">再次輸入新密碼:</label>
                    <div class="col-md-9">
                        <input id="@*reNpwd*@" name="@*reNpwd*@" type="text" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-3 col-md-9">
                        <input id="Submit1" type="submit" value="確定" class="btn btn-primary" />
                        <input id="Reset1" type="reset" value="重整" class="btn btn-primary" />
                        <span class="text-danger">@ViewBag.Error</span>
                    </div>
                </div>

            </fieldset>
        </form>
        <div>
            @Html.ActionLink("返回上一頁", "Login", "Home")
        </div>
    </div>



}