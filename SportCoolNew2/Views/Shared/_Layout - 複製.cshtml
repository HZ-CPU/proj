<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 運酷生活就是酷_Sportscool！</title>



    @*main/boostrap/mainlayout 三合一包起來的bundle*@
    @*<link href="~/Content/main.css" rel="stylesheet" />
        <link href="~/Content/main-layout.css" rel="stylesheet" />*@
    @Styles.Render("~/Content/css")
   



</head>
<body>


    @*登入視窗*@
    <form action="@Url.Action("Login","Home")" method="post">
        <div class="modalbox">
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="exampleModalLabel">登入</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true" style="color: white;">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="textbox" id="textbox">
                                <i class="fas fa-envelope" aria-hidden="true"></i>
                                <i class="fas fa-unlock-alt" aria-hidden="true"></i>
                                <input type="text" placeholder="e-mail帳號" required="" id="id" name="id">
                                <input type="password" placeholder="密碼" required="" id="pswd" name="pswd">
                            </div>
                            <a href="/Home/ForgetPwd?" class="text-white"><label class="label1">忘記密碼</label></a>
                            <label>/</label>

                            <a href="/Members/Create?" class="text-white"><label class="label2">註冊會員</label></a>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="alert">運酷一下</button>
                        </div>
                        <div class="text-danger ml-5">
                            @ViewBag.Erroer

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>


    <div style="height:20%;width:100%;"></div>
    <header class="fixed-top">
        <div class="header" id="header">
            <div class="headerbox" id="headerbox">
                <div class="yunkulogobox" id="yunkulogobox">
                    <a href="/Home/Login?area=''"><img src="~/Sportscool web/homepage_image/yunku_logo.png" alt="yunkulogo" class="yunkulogo img-fluid" id="yunkulogo" /></a>
                </div>
                <div class="searchbox" id="searchbox">
                    @*<input type="text" name="搜尋" class="searchbar" id="searchbar" placeholder="請輸入搜尋內容">
                    <img src="~/Sportscool web/homepage_image/magnifier.png" alt="search" class="searchicon" id="searchicon">*@
                </div>

                @*<div>@Html.ActionLink("我的購物車", "MyCar", "Commodities")</div>*@
                <div class="iconbox" id="iconbox">
                    <div data-toggle="tooltip" title="購物車">
                        <a href="/Commodities/MyCar"><img src="~/Sportscool web/homepage_image/bag.png" alt="bag" class="icon data-tooltip:='登入'" id="icon"></a>
                    </div>

                    <!-- Button trigger modal -->
                    <div data-toggle="modal" data-target="#exampleModal">
                        @if (Session["member"] != null)
                        {
                            <div data-toggle="tooltip" title="登出">
                                <a href="/Home/Logout?">
                                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-box-arrow-in-right text-white icon" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                                        <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                                    </svg>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div data-toggle="tooltip" title="登入" id="test">
                                @*<a href="/Login/Login?"><img src="~/Sportscool web/homepage_image/icon-person.png" alt="person" class="icon" id="icon"></a>*@
                                <img src="~/Sportscool web/homepage_image/icon-person.png" alt="person" class="icon" id="icon">
                            </div>
                        }
                    </div>


                    <!-- 漢堡選單導航按鈕 -->
                    <div data-toggle="tooltip" title="選單">
                        <div data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            <img src="~/Sportscool web/homepage_image/burgernew.png" alt="burger" class="icon" id="icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 漢堡選單導航功能 -->
        <div class="collapse" id="collapseExample">
            <div class="navbox">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Commodities/Index" data-target="#carouselExampleIndicators">運酷商城</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/TrendingArticles/Index?">官方貼文</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Classes/Details/1036">運酷學習</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">健康生活</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Members/Details/@Session["memberId"]">個人專區</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Friends/Index/@Session["memberId"]">好友專區</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Activities/Index">活動邀約</a>
                    </li>

                </ul>
              
            </div>
        </div>

    </header>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="footerallbox" id="footerallbox">
            <div class="footerleft" id="footerleft">
                <div class="footerbox1" id="footerbox1">
                    <h3>加入運酷</h3>
                    <h4>工作環境</h4>
                    <h4>運酷理念</h4>
                    <h4>運酷理念</h4>
                    <h4>應徵流程</h4>
                    <h4>職缺需求</h4>
                </div>
                <div class="footerbox2" id="footerbox2">
                    <h3>相關連結</h3>
                    <h4>Android  APP下載</h4>
                    <img src="~/Sportscool web/homepage_image/fakeQR.png" alt="fakeQR" class="QR" id="QR">
                    <h4>IOS   APP下載</h4>
                    <img src="~/Sportscool web/homepage_image/fakeQR.png" alt="fakeQR" class="QR" id="QR">
                </div>

                <div class="footerbox3" id="footerbox3">
                    <h3>常見問題</h3>
                    <h4>線上退貨</h4>
                    <h4>訂單查詢</h4>
                    <h4><a href=".yunlogo">客服電話0800-500-6000</a></h4>
                    <h4>網站導覽</h4>
                </div>
            </div>
            <div class="footerright" id="ooterright">
                <div class="footerbox4" id="footerbox4">
                    <img src="~/Sportscool web/homepage_image/facebook.png" alt="facebook" class="facebook" id="facebook">
                    <img src="~/Sportscool web/homepage_image/youtube.png" alt="youtube" class="youtube" id="youtube">
                    <img src="~/Sportscool web/homepage_image/linepng.png" alt="line" class="line" id="line">
                    <img src="~/Sportscool web/homepage_image/instagram.png" alt="instagram" class="instagram" id="instagram">
                    <h4>© 運酷電商股份有限公司|保留一切權利</h4>
                    <a href=".yunkulogo">隱私權政策</a>
                    <a href=".yunkulogo">網站使用條款</a>
                    <a href=".yunkulogo">法律聲明</a>
                </div>
            </div>
        </div>
    </footer>






    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @section script{
        <script src="~/Scripts/jquery-3.5.1.min.js"></script>
        <script>src = "~/Scripts/esm/popper.js" ></script>
    }
    @RenderSection("scripts", required: false)




    @if ((ViewBag.Erroer != null) || (TempData["message"] != null))
    {
        <script>
            $(document).ready(function () {
                $('#exampleModal').modal('show')
            });

        </script>
    }

</body>
</html>
